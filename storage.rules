
rules_version = '2';

// Documentation: https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Tout le monde peut lire les fichiers (indispensable pour les visiteurs du site)
      allow read: if true;
      
      // Seuls les utilisateurs authentifiés peuvent écrire (uploader, modifier, supprimer)
      allow write: if request.auth != null;
    }
  }
}
